<!doctype html>
<html data-ng-app="app">
<head>
    <title>Test Angular</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" data-ng-controller="routeController">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">Test Angular</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li ng-repeat="link in links" ng-class="{active: $route.current.templateUrl == link.templateUrl}"><a href="#{{link.path}}">{{link.name}}</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container view-animate-container">
        <div class="slide" data-ng-view=""></div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/toastr")
       
    @Scripts.Render("~/bundles/appInit")
    @Scripts.Render("~/bundles/appFactories")
    @Scripts.Render("~/bundles/appControllers")
</body>
</html>